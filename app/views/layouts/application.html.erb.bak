<!DOCTYPE html>
<html>
<head>
  <title>Tennis Matchmaker</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" media="screen" rel="stylesheet" />
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <meta content='<%= !current_user.nil? ? current_user.id : "" %>' name='user-id'/>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-inverse" role="navigation">
       <div class="navbar-header">
      <div class="container">
        <%= link_to "Home", root_path, class: 'navbar-brand' %>
        <% if current_user %>       
          <%= link_to "Sign out", signout_path, id: "sign_out", class: 'navbar-brand' %>
        <% else %>
          <%= link_to "Sign in with Google", "/auth/google_oauth2", id: "sign_in", class: 'navbar-brand' %>
        <% end %>
        <%= link_to "About Us", "/about_us", class: 'navbar-brand' %>
      </div>
    </div>
  </div>
  <div class="container">
<%= yield %>
  </div>
</body>
</html>

